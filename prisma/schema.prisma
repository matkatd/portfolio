generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  password  String
  sessions Session[]
  profile   Profile
}

model Session {
  id        String   @id  @map("_id") 
  userId    String   
  expiresAt DateTime
  user User          @relation(references: [id], fields: [userId], onDelete: Cascade)

}

model Projects {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  category   String
  title      String
  date       String
  slug       String
  img        String
  alt        String
  writeup    String[]
  inProgress Boolean
}

model Photography {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  alt   String
  thumb String
  img   String
}

type Profile {
  firstName String
  lastName  String
}
